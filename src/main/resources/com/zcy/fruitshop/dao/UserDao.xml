<mapper xmlns="http://mybatis.org/schema/mybatis-mapper">
    <resultMap id="userMap" type="com.zcy.fruitshop.bean.User">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="queryUserById" parameterType="java.lang.Long" resultMap="userMap">
        select * from user where id=#{id}
    </select>

    <insert id="addUser" parameterType="com.zcy.fruitshop.bean.User" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, password, gmt_created, gmt_modified) values(#{username}, #{password}, now(), now())
    </insert>

    <update id="updateUser" parameterType="com.zcy.fruitshop.bean.User">
        update user set username=#{username}, password=#{password}, gmt_modified=now() where id=#{id}
    </update>

    <delete id="deleteUserById" parameterType="java.lang.Long">
        delete from user where id=#{id}
    </delete>

    <select id="queryUserByUsername" parameterType="java.lang.String" resultMap="userMap">
        select * from user where username=#{username} limit 1
    </select>


</mapper>